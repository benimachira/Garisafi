<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/ln_dialog_progress"
        android:layout_gravity="center">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="32dp"
            app:cardBackgroundColor="#FAFAFA"
            app:cardElevation="10dp"
            android:layout_gravity="bottom">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="48dp"
                    android:textStyle="bold"
                    android:text="Upoading All images...."
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="16sp" />


                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:background="@drawable/progressbarstyleone"
                    android:layout_height="30dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="20dp" />


                <TextView
                    android:id="@+id/txtPercentage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="32dp"
                    android:layout_marginLeft="32dp"
                    android:text=""
                    android:textColor="@color/font_color"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="32dp"
                    android:textSize="13sp"
                    android:layout_marginRight="32dp"
                    android:textColor="@color/font_color"
                    android:id="@+id/message"
                    android:gravity="center"
                    android:text=""
                    />


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:id="@+id/cancel"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginBottom="16dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/my_button_bg"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <TextView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:textSize="22dp"
            android:padding="1dp"
            android:id="@+id/tv_counter"
            android:background="@drawable/circular_tick"
            android:gravity="center"
            android:layout_gravity="center_horizontal|top"
            android:textColor="@color/button_green"
            android:textStyle="bold"
            android:text=""
            android:elevation="10dp"/>

        <!--<ImageView-->
            <!--android:layout_width="64dp"-->
            <!--android:layout_height="64dp"-->
            <!--android:padding="1dp"-->
            <!--android:src="@drawable/g_check"-->
            <!--android:background="@drawable/circular_tick"-->
            <!--android:layout_gravity="center_horizontal|top"-->
            <!--/>-->

    </FrameLayout>
</LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/ln_dialog_done"
        android:layout_gravity="center">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="32dp"
                app:cardBackgroundColor="#FAFAFA"
                app:cardElevation="10dp"
                android:layout_gravity="bottom">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/title_ok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="48dp"
                        android:gravity="center"
                        android:text="Successfully uploaded"
                        android:textColor="@color/button_green"
                        android:textSize="18sp"
                        android:textStyle="bold" />




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="24dp"
                        android:layout_marginLeft="32dp"
                        android:textSize="15sp"
                        android:layout_marginRight="32dp"
                        android:gravity="center"
                        android:textColor="@color/font_color"
                        android:text="The ad was successfully uploaded,You may proceed to upload more cars"
                        />


                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Proceed"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:id="@+id/ok_proceed"
                        android:layout_marginTop="32dp"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginBottom="16dp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/my_button_bg"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="8dp"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:elevation="10dp"
            android:src="@drawable/g_check"
            android:background="@drawable/circular_tick"
            android:layout_gravity="center_horizontal|top"
            />

        </FrameLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:id="@+id/ln_dialog_fail"
        android:layout_gravity="center">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="32dp"
                app:cardBackgroundColor="#FAFAFA"
                app:cardElevation="10dp"
                android:layout_gravity="bottom">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="48dp"
                        android:gravity="center"
                        android:text="Image Upload failed"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold" />




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="24dp"
                        android:layout_marginLeft="32dp"
                        android:textSize="15sp"
                        android:layout_marginRight="32dp"
                        android:gravity="center"
                        android:textColor="@color/font_color"
                        android:text="Some images were not upload, you may choose to try again"
                        />


                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Try again"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:onClick="try_again_upload"
                        android:id="@+id/ok_again"
                        android:layout_marginTop="32dp"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginBottom="16dp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/my_button_bg"
                        />


                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:onClick="cancel_upload"
                        android:id="@+id/ok_cancel_upload"
                        android:layout_marginTop="32dp"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginBottom="16dp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/my_button_bg"
                        />

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="8dp"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:elevation="10dp"
                android:src="@drawable/error"
                android:background="@drawable/circular_tick"
                android:layout_gravity="center_horizontal|top"
                />

        </FrameLayout>
    </LinearLayout>

</LinearLayout>
