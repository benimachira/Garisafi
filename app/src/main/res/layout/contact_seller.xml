<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:orientation="vertical">


    <!--card view make the enquiry-->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp"
        android:id="@+id/card_make_enquiry"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="visible"
        android:layout_marginTop="32dp"
        app:cardBackgroundColor="#FAFAFA"
        app:cardElevation="10dp"
        android:layout_gravity="bottom">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="17sp"
                android:layout_marginBottom="25dp"
                android:textStyle="bold"
                android:textColor="@color/title_color"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:text="Contact Seller"/>



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="#FF4081"
                    android:maxLines="1"
                    android:id="@+id/ed_your_name"
                    android:paddingLeft="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/font_color"
                    android:drawablePadding="15dp"
                    android:hint="Your name"
                    android:fontFamily="@font/roboto_medium"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="#FF4081"
                    android:maxLines="1"
                    android:id="@+id/phone_number"
                    android:paddingLeft="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/font_color"
                    android:drawablePadding="15dp"
                    android:hint="Your mobile number"
                    android:fontFamily="@font/roboto_medium"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="#FF4081"
                    android:maxLines="1"
                    android:id="@+id/email_adress"
                    android:paddingLeft="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/font_color"
                    android:drawablePadding="15dp"
                    android:hint="Your email address"
                    android:fontFamily="@font/roboto_medium"/>
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="#FF4081"
                    android:maxLines="1"
                    android:inputType="number"
                    android:id="@+id/et_offer_price"
                    android:paddingLeft="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/font_color"
                    android:drawablePadding="15dp"
                    android:hint="Offer price"
                    android:fontFamily="@font/roboto_medium"/>
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:drawableTint="#FF4081"
                android:id="@+id/custom_message"
                android:background="@drawable/my_textview_bg_normal"
                android:padding="10dp"
                android:textSize="14sp"
                android:gravity="top"
                android:drawablePadding="15dp"
                android:fontFamily="@font/roboto_medium"
                android:text="I saw this car on Garisafi.com and i am interested,please contact me with more details about the car " />
        </android.support.design.widget.TextInputLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enquire"
                android:textSize="14sp"
                android:id="@+id/btn_enquire"
                android:layout_marginTop="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginBottom="16dp"
                android:textColor="@android:color/white"
                android:background="@drawable/my_button_bg"
                android:fontFamily="@font/roboto_regular"
                />
        </LinearLayout>

        </ScrollView>
    </android.support.v7.widget.CardView>




    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/card_make_confirm_phono_no"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="32dp"
        android:visibility="gone"
        app:cardBackgroundColor="#FAFAFA"
        app:cardElevation="10dp"
        android:layout_gravity="center">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:gravity="center_horizontal"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="25dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:text="Mobile no verification"
                    android:visibility="visible"
                    android:textColor="#000"
                    android:fontFamily="@font/roboto_medium"
                    />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/confirm_message"
                    android:visibility="visible"
                    android:textColor="@color/font_color"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_medium"
                    />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:drawableTint="#FF4081"
                        android:maxLines="1"
                        android:id="@+id/confirm_phone_number"
                        android:paddingLeft="5dp"
                        android:textSize="14sp"
                        android:textColor="@color/font_color"
                        android:drawablePadding="15dp"
                        android:hint="Your mobile number"
                        android:fontFamily="@font/roboto_medium"/>
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:id="@+id/confirm_phone"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="32dp"
                    android:textAllCaps="false"
                    android:layout_marginLeft="32dp"
                    android:layout_marginBottom="16dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/my_button_bg"
                    android:fontFamily="@font/roboto_regular"
                    />
            </LinearLayout>

        </ScrollView>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="32dp"
        android:id="@+id/card_confirm_code"
        android:visibility="gone"
        app:cardBackgroundColor="#FAFAFA"
        app:cardElevation="10dp"
        android:layout_gravity="bottom">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:gravity="center_horizontal"
                    android:text="Accont verification"
                    android:visibility="visible"
                    android:textColor="#000"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="25dp"
                    android:fontFamily="@font/roboto_medium"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"                    />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/confirm_code"
                    android:visibility="visible"
                    android:textColor="@color/font_color"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_medium"
                    />



                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:drawableTint="#FF4081"
                        android:maxLines="1"
                        android:id="@+id/enter_code"
                        android:paddingLeft="5dp"
                        android:textSize="14sp"
                        android:textColor="@color/font_color"
                        android:drawablePadding="15dp"
                        android:hint="Enter code"
                        android:fontFamily="@font/roboto_medium"/>
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:id="@+id/submit_code"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="32dp"
                    android:textAllCaps="false"
                    android:layout_marginLeft="32dp"
                    android:layout_marginBottom="16dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/my_button_bg"
                    android:fontFamily="@font/roboto_regular"
                    />
            </LinearLayout>

        </ScrollView>
    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="32dp"
        android:visibility="gone"
        android:id="@+id/card_enquiry_sucess"
        app:cardElevation="10dp"
        android:layout_gravity="bottom">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="1dp"
            android:layout_marginTop="32dp"
            app:cardBackgroundColor="#FAFAFA"
            app:cardElevation="10dp"
            android:layout_gravity="bottom">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/title_reg_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="48dp"
                    android:layout_marginBottom="30dp"
                    android:gravity="center"
                    android:text="Succesfully sent"
                    android:textColor="@color/button_green"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_regular"/>




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/font_color"
                    android:id="@+id/message_reg"
                    android:layout_marginBottom="30dp"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Your enquiries was succesfully sent, This car seller will get back to you as soon as they receive this enquiry."
                    />


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="OK"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:id="@+id/ok_btn"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="32dp"
                    android:textAllCaps="false"
                    android:layout_marginLeft="32dp"
                    android:layout_marginBottom="16dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/my_button_bg"
                    android:fontFamily="@font/roboto_regular">

                </Button>


            </LinearLayout>
        </android.support.v7.widget.CardView>
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="8dp"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:elevation="10dp"
            android:src="@drawable/g_check"
            android:background="@drawable/circular_tick"
            android:layout_gravity="center_horizontal|top"
            />

    </FrameLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
