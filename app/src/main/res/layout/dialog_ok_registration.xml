<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:id="@+id/ln_dialog_progress"
        android:layout_gravity="center">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="32dp"
                app:cardBackgroundColor="#FAFAFA"
                app:cardElevation="10dp"
                android:layout_gravity="bottom">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/title_reg_ok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="48dp"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/pakistan_green"
                        android:textSize="18sp"
                        android:textStyle="bold" />




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="24dp"
                        android:layout_marginLeft="32dp"
                        android:textSize="15sp"
                        android:layout_marginRight="32dp"
                        android:id="@+id/message_reg"
                        android:gravity="center"
                        android:text=""
                        />


                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Upload"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:id="@+id/ok_btn_reg_done"
                        android:layout_marginTop="32dp"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginBottom="16dp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/green_button"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="8dp"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:elevation="10dp"
                android:src="@drawable/g_check"
                android:background="@drawable/circular_tick"
                android:layout_gravity="center_horizontal|top"
                />

        </FrameLayout>
    </LinearLayout>
</LinearLayout>