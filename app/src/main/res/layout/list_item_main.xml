<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:id="@+id/liner_layout_parent"
    android:orientation="vertical" >

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="150dp"
    card_view:cardUseCompatPadding="true"
    android:layout_gravity="center"
    android:id="@+id/card_parent"
    card_view:cardElevation="1dp"
    card_view:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:gravity="center"
            android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <ke.co.wonderkid.garisafi.controllers.RoundRectCornerImageView
                                android:layout_width="match_parent"
                                android:id="@+id/avatar"
                                android:scaleType="centerCrop"
                                android:src="@color/light_gray"
                                android:layout_height="140dp" />
                            </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_make"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:gravity="left"
                                android:text="Test"
                                android:fontFamily="@font/roboto_bold"
                                android:textColor="@color/black"
                                android:textSize="17sp"
                                android:textAppearance="?android:textAppearanceLarge" />


                            <TextView
                                android:id="@+id/tv_price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginRight="8dp"
                                android:gravity="left"
                                android:fontFamily="@font/roboto_bold"
                                android:text="KSH 400000"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/tv_year"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2017"
                                android:textSize="14sp"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/font_color"
                                android:gravity="left">

                            </TextView>


                            <TextView
                                android:id="@+id/tv_location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nairobi"
                                android:textSize="14sp"
                                android:layout_marginBottom="5dp"
                                android:fontFamily="@font/roboto_regular"
                                android:textColor="@color/font_color"
                                android:gravity="left">

                            </TextView>


                            <TextView
                                android:id="@+id/tv_installments"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_marginRight="8dp"
                                android:gravity="left"
                                android:fontFamily="@font/roboto_regular"
                                android:textColor="@color/colorAccentLight"
                                android:text="Installment Accepted"
                                android:textSize="14dp" />
                        </LinearLayout>

                    </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>

